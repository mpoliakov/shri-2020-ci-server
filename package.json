{
  "name": "shri-2020-ci-server",
  "version": "1.0.0",
  "description": "School CI Server",
  "main": "src/server/index.js",
  "scripts": {
    "start": "npm run build && node dist/server/server.js",
    "start-dist": "node dist/server/server.js",
    "build": "npm run build:server && npm run build:client",
    "build:server": "tsc -p tsconfig.server.json",
    "build:client": "webpack --mode production",
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "dev:server": "nodemon --exec ts-node --files src/server/server.ts",
    "dev:client": "webpack-dev-server --mode development --devtool inline-source-map --hot",
    "test": "npm run test.jest",
    "test.jest": "jest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mpoliakov/shri-2020-ci-server.git"
  },
  "author": "Maksim Poliakov",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/mpoliakov/shri-2020-ci-server/issues"
  },
  "homepage": "https://github.com/mpoliakov/shri-2020-ci-server#readme",
  "dependencies": {
    "ansi-to-html": "0.6.14",
    "awesome-typescript-loader": "5.2.1",
    "axios": "0.19.2",
    "axios-retry": "3.1.7",
    "classnames": "2.2.6",
    "del": "5.1.0",
    "dotenv": "8.2.0",
    "express": "4.17.1",
    "history": "4.10.1",
    "pretty-ms": "6.0.1",
    "react": "16.13.1",
    "react-dom": "16.13.1",
    "react-redux": "7.2.0",
    "react-router-dom": "5.1.2",
    "redux": "4.0.5",
    "redux-thunk": "2.3.0",
    "swagger-ui-express": "4.1.4"
  },
  "devDependencies": {
    "@babel/core": "7.9.0",
    "@babel/preset-env": "7.9.0",
    "@babel/preset-react": "7.9.4",
    "@types/classnames": "2.2.10",
    "@types/express": "4.17.6",
    "@types/history": "4.7.5",
    "@types/react": "16.9.34",
    "@types/react-redux": "7.1.7",
    "@types/react-router-dom": "5.1.5",
    "@types/swagger-ui-express": "4.1.2",
    "autoprefixer": "9.7.5",
    "babel-loader": "8.1.0",
    "concurrently": "5.1.0",
    "css-loader": "3.4.2",
    "cssnano": "4.1.10",
    "identity-obj-proxy": "3.0.0",
    "jest": "25.3.0",
    "mini-css-extract-plugin": "0.9.0",
    "node-sass": "4.13.1",
    "nodemon": "2.0.2",
    "postcss-loader": "3.0.0",
    "react-test-renderer": "16.13.1",
    "redux-mock-store": "1.5.4",
    "sass-loader": "8.0.2",
    "style-loader": "1.1.3",
    "ts-node": "8.9.0",
    "typescript": "3.8.3",
    "webpack": "4.42.1",
    "webpack-cli": "3.3.11",
    "webpack-dev-server": "3.10.3"
  },
  "engines": {
    "node": "12.16.2",
    "npm": "6.4.1"
  },
  "jest": {
    "moduleNameMapper": {
      "^@core(.*)$": "<rootDir>/src/client/core$1",
      "^@components(.*)$": "<rootDir>/src/client/components$1",
      "^@reducer(.*)$": "<rootDir>/src/client/reducer$1",
      "^@stub(.*)$": "<rootDir>/src/stub$1",
      "\\.(css|scss)$": "identity-obj-proxy"
    }
  }
}
